<h1> All Roles</h1>
@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover mt-5">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(U => U.Id)</td>
                <td>@Html.DisplayNameFor(U => U.RoleName)</td>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var @role in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(M => @role.Id)</td>
                    <td>@Html.DisplayFor(M => @role.RoleName)</td>
                    <partial name="_ButtonsPartial" model="@role.Id" />
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-4 alert alert-warning">
        <h3>There is No Role :(</h3>
    </div>
}

