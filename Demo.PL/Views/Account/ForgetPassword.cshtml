@model ForgetPasswordViewModel
@{
    ViewData["Title"] = "ForgetPassword";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="main-agileinfo">
	<div class="agileits-top">
		<form asp-action="SendResetPasswordEmail" method="post">
			<div asp-validation-summary="ModelOnly"></div>
			<input class="text email" asp-for="Email" placeholder="Email" required="">
		
			<input type="submit" value="Reset Password">
		</form>
	</div>
</div>

@section ValidationScriptsSection {
	<partial name="_ValidationScriptsPartial" />
}

