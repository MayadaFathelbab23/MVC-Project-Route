@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="main-agileinfo">
	<div class="agileits-top">
		<form asp-action="Login" method="post">
			<div asp-validation-summary="ModelOnly"></div>
			<input class="text email" asp-for="Email" placeholder="Email" required="">
			<input class="text" asp-for="Password" placeholder="Password" required="">
			<div class="wthree-text">
				<label class="anim">
					<input asp-for="RememberMe" class="checkbox" required="">
					<span>Remember Me?</span>
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="Login">
			<p><a asp-action="GoogleLogin">Login With Google Account</a></p>
		</form>
		<p>Don't You have an Account? <a asp-action="SignUp"> SignUp </a></p>
		<p> <a asp-action="ForgetPassword"> Forget Password? </a></p>
	</div>
</div>

@section ValidationScriptsSection {
	<partial name="_ValidationScriptsPartial" />
}

