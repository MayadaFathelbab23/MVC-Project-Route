@model EmployeeViewModel
@inject IUnitOfWork _unitOfWork
@{
    //var departments = new SelectList(ViewBag.Departments , nameof(Department.Id) , nameof(Department.Name));
    var departments = new SelectList(await _unitOfWork.DepartmentRepository.GetAllAsync() , nameof(Department.Id) , nameof(Department.Name));
}
<div class="form-group">
    <label class="col-form-label" asp-for="Name"></label>
    <input asp-for="Name" class="form-control" />
    <span class="text-danger" asp-validation-for="Name"></span>
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="Email"></label>
    <input asp-for="Email" class="form-control" />
    <span class="text-danger" asp-validation-for="Email"></span>
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="Address"></label>
    <input asp-for="Address" class="form-control" />
    <span class="text-danger" asp-validation-for="Address"></span>
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="Age"></label>
    <input asp-for="Age" class="form-control" />
    <span class="text-danger" asp-validation-for="Age"></span>
</div>
<div class="form-check">
    <input class="form-check-input" type="radio" value="1" id="flexRadioDefault1" asp-for="EmployeeGender">
    <label class="form-check-label" for="flexRadioDefault1">
        Male
    </label>
</div>
<div class="form-check">
    <input class="form-check-input" type="radio" value="2" id="flexRadioDefault2" asp-for="EmployeeGender">
    <label class="form-check-label" for="flexRadioDefault2">
        Female
    </label>
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="Salary"></label>
    <input asp-for="Salary" class="form-control" />
    <span class="text-danger" asp-validation-for="Salary"></span>
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="HireDate"></label>
    <input asp-for="HireDate" class="form-control" />
</div>
<div class="form-group">
    <input asp-for="IsActive" class="form-check-input" />
    <label class="col-form-label" asp-for="IsActive"></label>
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="Department"></label>
    <select class="form-control" asp-for="DepartmentId" asp-items="@departments">
        @* asp-items : create opttions using SelectList *@
        <option value="@null">__ Select Department __</option>
    </select>
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="Image"></label>
    <input  class="form-control-file" asp-for="Image"/>
</div>