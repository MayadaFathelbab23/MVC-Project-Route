<h1> All Users</h1>
@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover mt-5">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(U => U.Id)</td>
                <td>@Html.DisplayNameFor(U => U.FName)</td>
                <td>@Html.DisplayNameFor(U => U.LName)</td>
                <td>@Html.DisplayNameFor(U => U.Email)</td>
                <th>@Html.DisplayNameFor(U => U.PhoneNumber)</th>
                <th>@Html.DisplayNameFor(U => U.Roles)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var @user in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(M => @user.Id)</td>
                    <td>@Html.DisplayFor(M => @user.FName)</td>
                    <td>@Html.DisplayFor(M => @user.LName)</td>
                    <td>@Html.DisplayFor(M => @user.Email)</td>
                    <td>@Html.DisplayFor(M => @user.PhoneNumber)</td>
                    <td>@string.Join("," , @user.Roles)</td>
                    <partial name="_ButtonsPartial" model="@user.Id" />
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-4 alert alert-warning">
        <h3>There is No Users :(</h3>
    </div>
}
